<h2 class="text-center mt-5" id="form-title">修改餐廳介紹</h2>

<div class="container">
  <form action="/restaurants/{{restaurant._id}}?_method=PUT"" method="POST">
    <div class="mb-3">
      <label for="name" class="form-label">餐廳名稱:</label>
      <input name="name" type="text" id="restaurant-name" class="form-control" placeholder="星巴克..."
        value="{{restaurant.name}}" required />
    </div>
    <div class="mb-3">
      <label for="name_en" class="form-label">餐廳英文名稱：</label>
      <input name="name_en" type="text" id="restaurant-name_en" class="form-control" placeholder="Starbucks..."
        value="{{restaurant.name_en}}" required />
    </div>
    <div class="mb-3">
      <label for="category" class="form-label">餐廳類別:</label>
      <input list="categories" name="category" type="text" id="restaurant-category" class="form-control"
        placeholder="咖啡..." value="{{restaurant.category}}" required />
      <datalist id="categories">
        <option>日式</option>
        <option>義式</option>
        <option>美式</option>
        <option>酒吧</option>
        <option>咖啡</option>
      </datalist>
    </div>
    <div class="mb-3">
      <label for="image" class="form-label">餐廳照片：</label>
      <input name="image" id="restaurant-image" type="url" class="form-control"
        placeholder=" https://encrypted-tbn3.gstatic.com/images?q=tbn:ANd9GcQqDnLVyvnZSbhhYNO45FsaUm4OoSi8RUWlsEQYhI2Fn5tJH9cH..."
        value="{{restaurant.image}}" required />
    </div>
    <div class="mb-3">
      <label for="location" class="form-label">餐廳位址：</label>
      <input name="location" type="text" id="restaurant-location" class="form-control"
        placeholder="241新北市三重區正義北路140號..." value="{{restaurant.location}}" required />
    </div>
    <div class="mb-3">
      <label for="phone" class="form-label">餐廳電話：</label>
      <input type='tel' name="phone" id="restaurant-phone" class="form-control" placeholder=" 02 2984 2977..."
        pattern="02 \d{4} \d{4}" value="{{restaurant.phone}}" required />
    </div>
    <div class="mb-3">
      <label for="google_map" class="form-label">Google_map：</label>
      <input name="google_map" type="url" id="restaurant-google_map" class="form-control" placeholder=" https://..."
        value="{{restaurant.google_map}}" required />
    </div>
    <div class="mb-3">
      <label for="rating" class="form-label">評分:</label>
      <input name="rating" type="number" id="restaurant-rating" class="form-control" step="0.1" min="0" max="5"
        placeholder="0 ~ 5" value="{{restaurant.rating}}" required />
    </div>
    <div class="mb-3">
      <label for="description" class="form-label" rows="3" cols="20">餐廳介紹:</label>
      <textarea name="description" id="restaurant-description" class="form-control"
        required>{{restaurant.description}}</textarea>
    </div>
    <div class="text-right">
      <button class="btn btn-success" type="submit">儲存</button>
      <a href="/">
        <button type="button" class="btn btn-outline-secondary">
          返回
        </button></a>
    </div>
  </form>
</div>