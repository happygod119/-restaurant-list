<!-- search bar -->
<div class="container search-bar mt-5">
  <div class="row row-cols-1 row-cols-md-3 g-4 justify-content-between">
    <div class="col ">
      <div class="mb-1">
        <form action="/search">
          <div class="input-group">
            <input
              type="text"
              name="keywords"
              class="form-control"
              placeholder="輸入餐廳、分類"
              aria-label="Restaurant Name..."
              aria-describedby="search-button"
              value="{{keywords}}"
            />
            <div class="input-group-append">
              <button class="btn btn-major" type="submit" id="search-button"><i
                  class="fas fa-search"
                ></i></button>
            </div>
          </div>
        </form>
      </div>
    </div>

    <!--  Dropdown button  -->
    <div class="col ">
      <div class="mb-1">
        <div class="dropdown">
          <button
            class="btn btn-secondary dropdown-toggle"
            type="button"
            id="dropdownMenuButton"
            data-toggle="dropdown"
            aria-expanded="false"
          >
            Dropdown button
          </button>
          <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
            <a class="dropdown-item" href="#">Action</a>
            <a class="dropdown-item" href="#">Another action</a>
            <a class="dropdown-item" href="#">Something else here</a>
          </div>
        </div>
      </div>
    </div>

  </div>
</div>

<!-- restaurant list -->
<div class="container mt-5">
  {{#if restaurant}}
    <div class="row row-cols-1 row-cols-md-3 g-4">
      {{! each 迴圈 }}
      {{#each restaurant}}
        <div class="col">
          <div class="card mb-3">
            <img
              class="card-img-top"
              src="{{this.image}}"
              alt="{{this.name}}"
            />
            <div class="card-body p-3">
              <h6 class="card-title mb-1">{{this.name}}</h6>

              <div class="restaurant-category mb-1">
                <i class="fas fa-utensils pr-2"></i>
                {{this.category}}
              </div>

              <span class="badge badge-pill badge-danger font-weight-normal">
                {{this.rating}}
                <i class="fas fa-star fa-xs"></i>
              </span>
            </div>
            <div class="card-footer text-center">
              <a
                href="./restaurants/{{this._id}}/edit"
                class="btn btn-primary"
              >修改</a>
              <a
                href="./restaurants/{{this._id}}"
                class="btn btn-secondary"
              >介紹</a>
              <form
                action="./restaurants/{{this._id}}?_method=DELETE"
                method="POST"
                style="display: inline;"
              >
                <button
                  type="submit"
                  class="btn btn-danger"
                >刪除</button></form>
            </div>
          </div>
        </div>

      {{/each}}

    </div>

  {{else}}
    <!-- no result for search -->
    <div class="alert alert-warning" role="alert">
      關鍵字
      <strong>{{keywords}}</strong>
      查無相關餐廳，請重新搜尋一次。
    </div>
  {{/if}}
</div>